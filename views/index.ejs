
<!-- GRAB HEAD.EJS -->
<% include head %> 

  <body>
    <div class="container">
        <div class="row">
          <div class="col col-12">
            <h1 class="text-primary">MOVIES NOW PLAYING</h1>
            <br>
          </div>
            <!-- we have an array! it's parsedData   -->
            <% parsedData.forEach((movie, i)=>{ %>
              <div class="col col-lg-3 col-md-4 col-sm-6 col-12 poster">
                <a href="/movie/<%= movie.id %>">
                <img src="<%= imageBaseUrl + movie.poster_path %>" alt="Movie">
                <!-- <%= movie.title %>--> <!-- the equal sign means to print to the DOM -->
              </div>
            <% }) %>
          </div>
        </div>
      </div>
      
  </body>